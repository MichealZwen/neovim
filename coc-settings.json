{
  "languageserver": {
    "ccls": {
      "command": "ccls",
      "filetypes": [ "c", "cc", "cpp" ],
      "rootPatterns": [ "compile_commands.json", ".git/" ],
      "initializationOptions": {
        "cache": {
          "directory": "/tmp/ccls"
        },
        "index": {
          "threads": 2
        }
      }
    }
  }
}
